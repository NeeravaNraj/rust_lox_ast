class User {
    private password;
    private tries;
    public name;

    init(name, password) {
        this.name = name;
        this.password = password;
        this.tries = 3;
    }

    public login(password) {
        if (this.password == password) {
            print "Welcome " + this.name + "!";
        } else {
            if (this.tries == 0) {
                print "You ran out of login attempts!";
            } else {
                this.tries -= 1;
                print "Wrong password please try again";
            }
        }
    }
}

let raghu = User("Raghu", "1234");
raghu.login("1234");
